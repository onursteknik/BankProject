
@{
    ViewBag.Title = "Register";
}

<div class="clearfix" style="margin-bottom:100px;"></div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Kayıt Ol</h3>
                </div>
                <div class="panel-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <center>@TempData["Error"]</center>
                        </div>
                    }

                    <form accept-charset="UTF-8" role="form" action="/Login/Register" method="post">
                        <fieldset>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input class="form-control" placeholder="Ad" name="Firstname" type="text" maxlength="50" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input class="form-control" placeholder="Soyad" name="Lastname" type="text" maxlength="50" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input class="form-control" placeholder="TC Kimlik No" name="TCKN" type="text" maxlength="11" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                                    <input class="form-control" autocomplete="off" placeholder="Adres" name="Address" type="text" maxlength="500">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                                    <input class="form-control phone" autocomplete="off" placeholder="Telefon" name="Phone" type="text" maxlength="50">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    <input class="form-control" autocomplete="off" placeholder="Şifre" name="Password" type="password" value="" maxlength="10" required>
                                </div>
                            </div>
                            <input class="btn btn-sm btn-warning pull-right" type="submit" value="Kayıt Ol">
                        </fieldset>
                    </form>
                    <hr />
                </div>
            </div>
        </div>
    </div>
</div>
