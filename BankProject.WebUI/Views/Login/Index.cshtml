
@{
    ViewBag.Title = "Giriş Yap";
}

<div class="clearfix" style="margin-bottom:100px;"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Giriş Yap</h3>
                    </div>
                    <div class="panel-body">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger">
                                <center>@TempData["Error"]</center>
                            </div>
                        }
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success">
                                <center>@TempData["Success"]</center>
                            </div>
                        }
                        <form accept-charset="UTF-8" role="form" action="/Login/Index" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input class="form-control" placeholder="TC Kimlik No" name="TCKN" type="text" maxlength="11">
                                    </div>

                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input class="form-control" placeholder="Şifre" name="Password" type="password" value="" maxlength="10">
                                    </div>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="Remember" type="checkbox" value="true"> Beni Hatırla
                                    </label>
                                </div>
                                <input class="btn btn-sm btn-warning pull-right" type="submit" value="Giriş Yap">
                            </fieldset>
                        </form>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>

