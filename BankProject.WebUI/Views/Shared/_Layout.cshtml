@using BankProject.WebUI.Helpers
@using BankProject.WebUI.Authorize
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @DataHelpers.GetBankName()</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Anasayfa", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (UserSession.Info == null)
                    {
                        <li>@Html.ActionLink("Kayıt Ol", "Register", "Login")</li>
                        <li>@Html.ActionLink("Giriş Yap", "Index", "Login")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Hesaplar", "Index", "Account")</li>
                        <li>@Html.ActionLink("Havale Yap", "Transfer", "Account")</li>
                        <li>@Html.ActionLink("Virman Yap", "Virman", "Account")</li>
                        <li>@Html.ActionLink("HGS", "Index", "HGS")</li>
                        <li>@Html.ActionLink("Çıkış Yap", "Logout", "Login")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @DataHelpers.GetBankName()</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" integrity="sha256-Kg2zTcFO9LXOc7IwcBx1YeUBJmekycsnTsq2RuFHSZU=" crossorigin="anonymous"></script>
    <script src="~/Scripts/Site.js"></script>
</body>
</html>
